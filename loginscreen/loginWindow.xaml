<Window x:Class="loginscreen.loginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:loginscreen"
        mc:Ignorable="d"
        Title="loginWindow" Height="400" Width="500" FontSize="14" Background="Aquamarine" >
    <Border Background="Black" CornerRadius="20" Margin="30">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"></Label>
            <Label Content="User Name" Foreground="White" FontSize="20"></Label>
            <TextBox Name="txtUsername" Foreground="Black"></TextBox>
            <Label Content="Password" Foreground="White" FontSize="20"></Label>
            <PasswordBox Name="txtPassword" Foreground="Black"></PasswordBox>
            <Button Name="btnSubmit" Click="BtnSubmit_OnClick" Background="Green" Foreground="White" FontSize="20" Content="Submit" Margin="60 10"></Button>
            
        </StackPanel>
        
    </Border>
</Window>
